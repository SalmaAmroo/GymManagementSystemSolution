@model MemberForSessionViewModel

@{
    ViewData["Title"] = "Cancel";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-5 shadow text-center">

                <p class="fs-4 fw-semibold text-danger mb-3">
                    Cancel Booking Confirmation
                </p>

                <div class="alert alert-warning text-start">
                    <strong>Warning!</strong>
                    This will remove the member from this session.
                </div>

                <form asp-action="Cancel" asp-controller="Booking" method="post">
                    <input type="hidden" asp-for="MemberId" />
                    <input type="hidden" asp-for="SessionId" />

                    <div class="d-flex gap-3 mt-4">
                        <a asp-action="GetAllMembersForUpcomingSession"
                           asp-route-id="@Model.SessionId"
                           class="btn btn-secondary flex-fill">
                            No
                        </a>

                        <button type="submit" class="btn btn-danger flex-fill">
                            Yes, Cancel
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>